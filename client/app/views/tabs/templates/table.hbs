<table class="sortable">
    <thead>
    <tr>
        <th></th>
        {{#eachIndex headers}}
            {{#inArray ../attributes index}}
                <th class="attribute header" data-index="{{index}}" data-key="{{item}}">{{item}}
                    <span class="sorter">
                        {{#is index ../../sorter}}
                            {{#is ../../../order "asc"}}&#65516;
                            {{else}}&#65514;
                            {{/is}}
                        {{/is}}
                    </span>
                </th>
            {{/inArray}}
        {{/eachIndex}}
    </tr>
    </thead>
    <tbody>
    {{#each displayRows}}
        <tr>
            <td class="attribute">{{{communityRow}}}</td>
            {{#eachIndex row}}
                {{#inArray ../../attributes index}}
                    <td class="attribute" data-index="{{index}}">{{item}}</td>
                {{/inArray}}
            {{/eachIndex}}
        </tr>
    {{/each}}
    </tbody>
</table>